{
  "manifest_version": 3,
  "name": "AIMatrix Digital Rain Screen Saver",
  "version": "6.0.0",
  "description": "Matrix-style digital rain screen saver with configurable colors, speed, and density. Authentic Greek and Latin characters.",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["matrix.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AIMatrix Digital Rain Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://aimatrix.com"
}