  "screenshots": [
    {
      "src": "assets/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Matrix rain in fullscreen mode"
    },
    {
      "src": "assets/screenshot-narrow.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Matrix rain on mobile device"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Start Screen Saver",
      "short_name": "Start",
      "description": "Launch the Matrix rain screen saver in fullscreen mode",
      "url": "/?start=true",
      "icons": [
        {
          "src": "assets/icon-play-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Configure Matrix rain visual effects and behavior",
      "url": "/?settings=true",
      "icons": [
        {
          "src": "assets/icon-settings-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  
  "related_applications": [
    {
      "platform": "web",
      "url": "https://github.com/aimatrix/amx-aimatrix-screen-saver"
    }
  ],
  
  "features": [
    "Cross-browser compatibility",
    "Multi-display support",
    "Customizable colors and effects",
    "Greek and Latin character sets",
    "Performance optimization",
    "Fullscreen mode",
    "Keyboard shortcuts",
    "Mobile responsive"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+matrix",
      "url": "/?matrix=%s"
    }
  ],
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      },
      "icons": [
        {
          "src": "assets/icon-file-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ]
}